<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CyberCyld || </title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Blog Details & Job Details</h1>
    <form>
      <div class="row">
        <div class="col-md-12">
          <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                <th>ID</th>
                <th>Head of blog</th>
                <th>Type</th>
                <th>Date</th>
                <th>Edit </th>
                <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                 {{#each blogs}}
                <tr>
                <td>{{id}}</td>
                <td>{{head}}</td>
                <td>{{type}}</td>
                <td>{{date}}</td>
                 <td><a href="/edit-job/{{this.id}}">Edit</a></td>
      <td> <a href="delete/{{id}}">Delete</td>
                </tr>
                {{/each}}
                
            </tbody>
            </table>
        </div>
        <div class="col-md-12">
          <table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Location</th>
      <th>Type</th>
      <th>Salary</th>
      <th>Posted date</th>
      <th>Deadline</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
     {{#each jobs}}
    <tr>
      <td> {{id}}</td>
      <td>{{job_title}}</td>
      <td>{{job_location}}</td>
      <td>{{job_type}}</td>
      <td>{{salary}}</td>
      <td>{{posted_date}}</td>
      <td> {{application_deadline}}</td>
      <td><a href="/edit-job/{{this.id}}"><button class="btn btn-success">Edit</button></a></td>
      <td> <a href="/deletejobs/{{id}}" class="btn tbn-danger">Delete</a></td>
    </tr>
  {{/each}}
  </tbody>
</table>

        </div>
      </div>
      <div class="col-md-12">
          <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                <th>ID</th>
                <th>Head of blog</th>
                <th>Type</th>
                <th>Date</th>
                <th>Edit </th>
                <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each videos}}
                <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{embed_link}}</td>
                <td>{{date}}</td>
                 <td><a href="/edit-job/{{this.id}}">Edit</a></td>
      <td> <a href="videos/{{id}}">Delete</td>
                </tr>
                {{/each}}
                
            </tbody>
            </table>
        </div>
      <a href="/admindashboard" class="btn btn-success">Go to Home</a>
    </form>
  </div>
  
